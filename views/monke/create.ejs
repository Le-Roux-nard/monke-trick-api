<!DOCTYPE html>
<html>

<head>
  <title>Monke Trick Generator</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/static/monke/assets/css/fixed-background.css" />
  <link rel="stylesheet" href="/static/monke/assets/css/Glass-Panel.css" />
  <link rel="stylesheet" href="/static/monke/assets/css/Projects-Grid-Horizontal.css" />
  <link rel="stylesheet" href="/static/monke/assets/css/Search-Input-Responsive-with-Icon.css" />
  <link rel="stylesheet" href="/static/monke/assets/css/styles.css" />
</head>

<body data-base_url="<%=baseUrl %>">
  <%- include('../partials/navbar.ejs') %>
  <div class="card glass main text-center">
    <div class="container">
      <div class="row mb-5">
        <div class="col-md-8 col-xl-6 text-center mx-auto">
          <h2>Monkey Trick Generator</h2>
        </div>
      </div>
			<form>
      <div class="row gy-4 row-cols-1 row-cols-md-2">
        <div class="col">
          <div class="d-flex flex-column justify-content-center flex-wrap flex-lg-row text-center">
            <div class="container ressource-holder aspect-ratio-box">
              <div class="aspect-ratio-box-inside">
                <img id="imagePlaceholder" class="w-100 h-100" src="https://via.placeholder.com/624x361" />
              </div>
            </div>
            <input type="text" id="pictureInput" class="glass-button mt-2" placeholder="Picture Link" style="min-width: 50%" />
          </div>
        </div>
        <div class="col">
          <div class="d-flex flex-column justify-content-center flex-wrap flex-lg-row text-center">
            <div class="container ressource-holder aspect-ratio-box">
              <div class="aspect-ratio-box-inside">
                <div id="youtubeHolder" class="w-100 h-100 youtubeRelated"></div>
                <iframe allowfullscreen="" frameborder="0" id="videoHolder" class="d-block w-100 h-100"></iframe>
              </div>
            </div>
            <input type="text" id="videoInput" class="glass-button mt-2" placeholder="Video Link" style="min-width: 50%" />
            <input type="text" id="videoTitle" class="glass-button mt-2 youtubeRelated" placeholder="Custom Title" style="min-width: 50%" />
          </div>
        </div>
      </div>
      <div class="row row-cols-1 row-cols-md-2" style="margin-top: 30px">
        <div class="col w-100">
          <div class="d-flex flex-row justify-content-center flex-wrap mx-auto flex-lg-row text-center position-relative copy-div" style="min-width: 40%; max-width: 512px">
            <input type="text" class="glass-button copy-button-target" placeholder="username" disabled="" style="max-width: 72%" id="result" />
            <button class="input-group-text copy-button" type="button" style="margin: 0" onclick="navigator.clipboard.writeText(document.getElementById('result').value);">Copy</button>
            <button class="mt-2 mb-2 glass-button" id="submitForm" type="button" style="min-width: 100%" onclick="sendForm()">Submit</button>
          </div>
        </div>
				<div class="col alerts w-50 center">

				</div>
      </div>
    </div>
  </div>
  <script src="/static/monke/assets/js/createMonkeForm.js"></script>
  <script src="/static/monke/assets/js/youtube-embed.js"></script>
</body>

</html>